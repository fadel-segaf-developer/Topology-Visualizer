{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://topology-visualizer/schema/topology.schema.json",
  "title": "Topology Visualizer Graph",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "nodes", "edges"],
  "properties": {
    "meta": {
      "$ref": "#/$defs/meta"
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/node"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/edge"
      }
    }
  },
  "$defs": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "owner": { "type": "string" },
        "viewModes": {
          "type": "array",
          "items": { "$ref": "#/$defs/level" },
          "minItems": 1,
          "uniqueItems": true
        },
        "defaultView": { "$ref": "#/$defs/level" },
        "insightPlaybook": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["rule", "level", "kind"],
            "properties": {
              "rule": { "type": "string" },
              "level": { "$ref": "#/$defs/level" },
              "kind": { "type": "string" }
            }
          }
        },
        "intents": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_.-]+$": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "label": { "type": "string" },
                "color": { "type": "string" }
              },
              "required": ["label", "color"]
            }
          }
        },
        "guides": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["label", "url"],
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "description": { "type": "string" }
            }
          }
        },
        "viewCaps": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "high": { "type": "integer", "minimum": 0 },
            "medium": { "type": "integer", "minimum": 0 },
            "low": { "type": "integer", "minimum": 0 }
          }
        },
        "overrides": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "pin": {
              "type": "array",
              "items": { "type": "string" }
            },
            "hide": {
              "type": "array",
              "items": { "type": "string" }
            },
            "rename": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        },
        "insights": {
          "type": "array",
          "items": { "$ref": "#/$defs/insight" }
        },
        "repository": { "$ref": "#/$defs/repository" },
        "lastSyncedAt": { "type": "string", "format": "date-time" }
      }
    },
    "node": {
      "type": "object",
      "required": ["id", "level"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "label": { "type": "string" },
        "type": { "type": "string" },
        "group": { "type": "string" },
        "summary": { "type": "string" },
        "details": { "type": "string" },
        "level": { "$ref": "#/$defs/level" },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "parent": { "type": "string" },
        "children": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "metrics": {
          "type": "array",
          "items": { "$ref": "#/$defs/metric" }
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["label", "url"],
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "description": { "type": "string" }
            }
          }
        },
        "status": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "label": { "type": "string" },
            "tone": {
              "type": "string",
              "enum": ["success", "info", "warning", "danger", "neutral"]
            }
          }
        },
        "layout": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" },
            "width": { "type": "number" },
            "height": { "type": "number" },
            "fixed": { "type": "boolean" }
          }
        },
        "position": {
          "$ref": "#/$defs/point"
        },
        "size": {
          "$ref": "#/$defs/dimensions"
        },
        "icon": { "type": "string" },
        "source": {
          "$ref": "#/$defs/sourceRef"
        },
        "work": {
          "$ref": "#/$defs/workRefs"
        },
        "insights": {
          "type": "array",
          "items": { "$ref": "#/$defs/insight" }
        }
      }
    },
    "edge": {
      "type": "object",
      "required": ["from", "to"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "intent": { "type": "string" },
        "description": { "type": "string" },
        "level": { "$ref": "#/$defs/level" },
        "source": { "$ref": "#/$defs/sourceRef" },
        "work": { "$ref": "#/$defs/workRefs" },
        "insights": {
          "type": "array",
          "items": { "$ref": "#/$defs/insight" }
        }
      }
    },
    "level": {
      "type": "string",
      "enum": ["high", "medium", "low"]
    },
    "metric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "value"],
      "properties": {
        "label": { "type": "string" },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" }
          ]
        }
      }
    },
    "point": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      }
    },
    "dimensions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" }
      }
    },
    "workRefs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "issues": {
          "type": "array",
          "items": { "$ref": "#/$defs/issueRef" }
        },
        "prs": {
          "type": "array",
          "items": { "$ref": "#/$defs/prRef" }
        },
        "projects": {
          "type": "array",
          "items": { "$ref": "#/$defs/projectRef" }
        },
        "milestones": {
          "type": "array",
          "items": { "$ref": "#/$defs/milestoneRef" }
        }
      }
    },
    "issueRef": {
      "type": "object",
      "additionalProperties": true,
      "required": ["provider", "number", "url"],
      "properties": {
        "provider": { "type": "string" },
        "repo": { "type": "string" },
        "number": { "type": "integer" },
        "url": { "type": "string", "format": "uri" },
        "state": { "type": "string" },
        "title": { "type": "string" },
        "labels": {
          "type": "array",
          "items": { "type": "string" }
        },
        "assignees": {
          "type": "array",
          "items": { "type": "string" }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "prRef": {
      "type": "object",
      "additionalProperties": true,
      "required": ["provider", "number", "url"],
      "properties": {
        "provider": { "type": "string" },
        "repo": { "type": "string" },
        "number": { "type": "integer" },
        "url": { "type": "string", "format": "uri" },
        "state": { "type": "string" },
        "title": { "type": "string" },
        "labels": {
          "type": "array",
          "items": { "type": "string" }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "mergedAt": { "type": "string", "format": "date-time" }
      }
    },
    "sourceRef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string" },
        "lang": { "type": "string" },
        "symbol": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "git": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repo": { "type": "string" },
            "commit": { "type": "string" },
            "branch": { "type": "string" },
            "blame": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "path": { "type": "string" },
                "line": { "type": "integer", "minimum": 1 }
              }
            }
          }
        }
      }
    },
    "insight": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "kind", "text", "confidence", "sources"],
      "properties": {
        "level": { "$ref": "#/$defs/level" },
        "kind": { "type": "string" },
        "text": { "type": "string" },
        "actions": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type"],
            "properties": {
              "type": { "type": "string" },
              "id": { "type": "string" },
              "path": { "type": "string" },
              "url": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    },
    "repository": {
      "type": "object",
      "additionalProperties": false,
      "required": ["provider", "owner", "name", "url"],
      "properties": {
        "provider": { "type": "string" },
        "owner": { "type": "string" },
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "id": { "type": "integer" },
        "visibility": { "type": "string", "enum": ["public", "private", "internal"] },
        "description": { "type": "string" },
        "defaultBranch": { "type": "string" },
        "topics": {
          "type": "array",
          "items": { "type": "string" }
        },
        "license": { "type": "string" },
        "homepage": { "type": "string", "format": "uri" },
        "stars": { "type": "integer", "minimum": 0 },
        "forks": { "type": "integer", "minimum": 0 },
        "watchers": { "type": "integer", "minimum": 0 },
        "openIssues": { "type": "integer", "minimum": 0 },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "pushedAt": { "type": "string", "format": "date-time" },
        "projects": {
          "type": "array",
          "items": { "$ref": "#/$defs/projectRef" }
        },
        "milestones": {
          "type": "array",
          "items": { "$ref": "#/$defs/milestoneRef" }
        },
        "languages": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    },
    "projectRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "url"],
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "body": { "type": "string" },
        "state": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "milestoneRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "number", "title", "url"],
      "properties": {
        "id": { "type": "integer" },
        "number": { "type": "integer" },
        "title": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "state": { "type": "string" },
        "description": { "type": "string" },
        "dueOn": { "type": "string", "format": "date-time" },
        "openIssues": { "type": "integer", "minimum": 0 },
        "closedIssues": { "type": "integer", "minimum": 0 },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    }
  }
}
